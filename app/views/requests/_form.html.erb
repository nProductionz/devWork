<%= form_with(model: request) do |form| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
        <% request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.select :genre, :collection => %w[Manga Western Paint Digital] %>
  </div>

  <div class="field">
    <%= form.label :tag1 %>
    <%= form.select :tag1, :collection => %w[Traditional Action Horror Romance Ecchi Fanart Seinen Yuri Yaoi] %>
  </div>

  <div class="field">
    <%= form.label :tag2 %>
    <%= form.select :tag2, :collection => %w[Traditional Action Horror Romance Ecchi Fanart Seinen Yuri Yaoi    ] %>
  </div>

  <div class="field">
    <%= form.label :reference %>
    <%= form.text_field :reference %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
